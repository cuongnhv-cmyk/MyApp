{
    "extends": "@react-native/typescript-config",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@assets/*": ["src/assets/*"],
            "@navigation/*": ["src/navigation/*"],
            "@app-types/*": ["src/types/*"],
            "@store/*": ["src/store/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": ["src", "**/*.ts", "**/*.tsx", "nativewind-env.d.ts"],
    "exclude": ["**/node_modules", "**/Pods"]
}
